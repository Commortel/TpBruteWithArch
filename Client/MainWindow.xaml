<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="250,200,0,0" Name="TextLogin" Text="Login" VerticalAlignment="Top" Width="100" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="250,250,0,0" Name="TextPassword" Text="Password" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="350,200,0,0" Name="BoxLogin"  VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="350,250,0,0" Name="BoxPassword" VerticalAlignment="Top" Width="120"  />
        <Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="350,300,0,0" Name="Submit" VerticalAlignment="Top" Width="120" Click="Submit_Click" />
        <Button Content="NewAccount" Height="23" HorizontalAlignment="Left" Margin="350,350,0,0" Name="NewAccount" VerticalAlignment="Top" Width="120" />
        
        <Image Height="250" HorizontalAlignment="Left" Margin="50,150,0,0" Name="MeImage" Stretch="Fill" VerticalAlignment="Top" Width="150" />
        <Image Height="250" HorizontalAlignment="Left" Margin="400,150,0,0" Name="OhterImage" Stretch="Fill" VerticalAlignment="Top" Width="150" />
        <Grid Height="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="28" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Name:"/>
            <Label Grid.Row="1" Grid.Column="0" Content="E-Mail:"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Comment:"/>
            <TextBox Grid.Column="1" Grid.Row="0" Margin="3" />
            <TextBox Grid.Column="1" Grid.Row="1" Margin="3" />
            <TextBox Grid.Column="1" Grid.Row="2" Margin="3" />
            <Button Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" 
            MinWidth="80" Margin="3" Content="Send"  />
        </Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="200,150,0,0" Name="Level" VerticalAlignment="Top" Width="120" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="200,150,0,0" Name="Life" VerticalAlignment="Top" Width="120" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="200,150,0,0" Name="Strength" VerticalAlignment="Top" Width="120" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="200,150,0,0" Name="Agility" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
